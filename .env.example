# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=tron_indexer
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h

# Docker Compose 配置
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=tron_indexer

# 波场链配置 - 使用免费公共RPC端点
TRON_NODE_URL=https://tron.drpc.org
# 免费公共RPC端点，无需API Key
# 主要端点: dRPC提供的免费TRON RPC服务
# 备注：公共端点可能有速率限制，建议使用多节点配置分散请求
TRON_API_KEY=

# 多节点配置 - 使用多个免费公共RPC端点
TRON_NODE_URL_2=https://tron-evm.publicnode.com
TRON_NODE_URL_3=https://tron.therpc.io
TRON_NODE_URL_4=https://tron-rpc.publicnode.com
TRON_NODE_URL_5=https://public-trx-mainnet.fastnode.io
TRON_NODE_URL_6=https://endpoints.omniatech.io/v1/tron/mainnet-evm/public
TRON_NODE_URL_7=https://tron.rpc.grove.city/v1/01fdb492
TRON_API_KEY_2=
TRON_API_KEY_3=
TRON_API_KEY_4=
TRON_API_KEY_5=
TRON_API_KEY_6=
TRON_API_KEY_7=

# 备用节点列表（向后兼容）- 扩展更多公共RPC端点
TRON_BACKUP_NODES=https://tron-evm.publicnode.com,https://tron.therpc.io,https://public-trx-mainnet.fastnode.io,https://tron-rpc.publicnode.com,https://endpoints.omniatech.io/v1/tron/mainnet-evm/public,https://tron.rpc.grove.city/v1/01fdb492

# TronScan API配置
# TronScan API端点: https://apilist.tronscanapi.com
# 获取API Key: https://tronscan.org/ (登录后在API Keys页面创建)
# 使用方法: 在请求头中添加 TRON-PRO-API-KEY: your_api_key
TRONSCAN_API_URL=https://apilist.tronscanapi.com
TRONSCAN_API_KEY_1=your_tronscan_api_key_1
TRONSCAN_API_KEY_2=your_tronscan_api_key_2

# 同步配置
SYNC_INTERVAL=10s
SYNC_START_BLOCK=0
SYNC_BATCH_SIZE=100
SYNC_CONCURRENCY=5
SYNC_MAX_RETRIES=3

# 重试配置
RETRY_INITIAL_DELAY=1000
RETRY_MAX_DELAY=30000
RETRY_MULTIPLIER=2

# 服务配置
SERVER_PORT=8080
GIN_MODE=release

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28

# 市场数据API配置
COINGECKO_API_URL=https://api.coingecko.com/api/v3

# USDT合约地址（TRON网络）
USDT_CONTRACT_ADDRESS=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t